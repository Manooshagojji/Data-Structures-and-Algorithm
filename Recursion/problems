//PRINT INCREASING ORDER
class Main {
    public static void main(String[] args) {
        //System.out.println("Try programiz.pro");
        int n=5;
        increasingOrder(n);
    }
    public static void increasingOrder(int n){
        if(n==0)
        return;
        increasingOrder(n-1);
        System.out.println(n);
     
    }
}
