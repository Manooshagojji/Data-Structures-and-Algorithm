//find factorial 
class Main {
    public static void main(String[] args) {
        int n=5;
        System.out.println(fact(n));
    }
    public static int fact(int n){
        if(n==0)
        return 1;
        int subAns=fact(n-1);
        int ans=subAns*n;
        return ans;
    }
}
op: 120
