//PRINT DECREASING ORDER
class Main {
    public static void main(String[] args) {
        //System.out.println("Try programiz.pro");
        int n=5;
        decreasingOrder(n);
    }
    public static void decreasingOrder(int n){
        if(n==0)
        return;
       System.out.println(n);
       decreasingOrder(n-1);
    }
}
