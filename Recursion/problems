//DISPLAY ARRAY
class Main {
    public static void main(String[] args) {
         int arr[]={7,2,4,1,3};
         int n=arr.length;
      displayArray(arr,0,n);
    }
    public static void displayArray(int arr[],int i,int n){
        if(i==n)
        return;
        System.out.println(arr[i]);
        displayArray(arr,i+1,n);
    }
}
OP:
7
2
4
1
3
