import java.util.*;
class Node{
    int data;
    Node next;
    Node(int data,Node next){
        this.data = data;
        this.next = next;
    }
    Node(int data) {
        this.data = data;
        next = null;
    }
}
class Main {
    public static void main(String[] args) {
        int[] arr = {2,3,5,4,6};
        Node head = convertArr2LL(arr);
        int ele =4;
        int value = 7;
       
        head = insertAtKElement(head,ele,value);
        print(head);
    }
    public static Node convertArr2LL(int[] arr) {
        Node head = new Node(arr[0]);
        Node mover = head;
        for(int i=1;i<arr.length;i++) {
            Node temp = new Node(arr[i]);
            mover.next = temp;
            mover = temp;
        }
        return head;
    }
    public static void print(Node head) {
        Node temp = head;
        while(temp.next!= null) {
            System.out.print(temp.data +"->");
            temp = temp.next;
        }
        System.out.print(temp.data);
        System.out.println();
    }
    public static Node insertAtKElement(Node head,int ele,int value) {
        if(head == null) return null;

        if(head.data == ele) {
            //Node temp = new Node(ele,head);
            //return temp;
            Node newnode = new Node(value);
            head.next = newnode;
            newnode.next = null;
            
        }

        Node temp = head;
        while(temp.next != null) {
            if(temp.next.data == ele) {
                Node newnode = new Node(value);
                newnode.next = temp.next;
                temp.next = newnode;
                break;
            }
            temp = temp.next;
        }
        return head;
      
    }
}
